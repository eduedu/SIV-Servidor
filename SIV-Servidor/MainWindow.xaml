    </Window.Resources>
    <Grid>

        <Rectangle HorizontalAlignment="Left" Height="65" Margin="21,20,0,0" Stroke="#FFDCDCFF" VerticalAlignment="Top" Width="589"/>
        <Label x:Name="label_Copy5" Content="Artículo" HorizontalAlignment="Left" Margin="28,7,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" Background="#FF828296"/>
        <Label x:Name="Label1" x:FieldModifier="public" Content="Label" Margin="0,563,95,0" VerticalAlignment="Top" Height="46" Background="#FF00FF96" HorizontalAlignment="Right" Width="147"/>
        <Label x:Name="LTemp" Content="LTemp" HorizontalAlignment="Left" Margin="21,577,0,0" VerticalAlignment="Top" Width="650" Background="#FF00FF96" Height="32"/>
        <TextBox x:Name="tbBuscar" HorizontalAlignment="Left" Height="30" Margin="71,38,0,0" TextWrapping="Wrap" Width="350" Background="White" ToolTip="filtro" TextChanged="tbBuscar_TextChanged" PreviewKeyDown="tbBuscar_PreviewKeyDown" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
        <Label x:Name="label" Content="Buscar" HorizontalAlignment="Left" Margin="23,39,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>
        <ListView x:Name="listFiltro"    Height="134" Margin="880,131,-558,0" VerticalAlignment="Top" Width="630" Background="#FFF0F0F0" KeyDown="listFiltro_KeyDown" HorizontalAlignment="Left" Panel.ZIndex="1" IsTabStop="True"  >
            <ListView.Resources>
                <!--
                <Style TargetType="{x:Type GridViewColumnHeader}">
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                </Style>
                <DataTemplate x:Key="PrecioCellTemplate">
                    <TextBlock Foreground="DarkBlue" FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Right"
                             
                               Text="{ Binding precio, StringFormat=\{0:C\}}" 
                    />
                </DataTemplate>
                -->
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="id" Width="50"   DisplayMemberBinding="{Binding id}"  />
                    <GridViewColumn Header="Código" Width="100"   DisplayMemberBinding="{Binding codigo}"  />
                    <GridViewColumn Header="Descripcion" Width="350" DisplayMemberBinding="{Binding descripcion}"  />
                    <GridViewColumn Header="Precio" Width="100"   >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding precio, StringFormat=\{0:C\}}" Width="100" TextAlignment="Right" HorizontalAlignment="Right" Foreground="DarkBlue" FontWeight="Bold"  />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <DataGrid x:Name="gridFiltro" ItemsSource="{Binding}" HorizontalAlignment="Left" Margin="545,445,0,0" VerticalAlignment="Top" Height="75" Width="387" Background="#FFF000F0"/>
        <TextBox x:Name="tbCodigo" HorizontalAlignment="Left" Height="30" Margin="20,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" Background="#FFB4FFB4" ToolTip="filtro" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" VerticalContentAlignment="Center" Focusable="False" IsTabStop="False" IsHitTestVisible="False"/>
        <TextBox x:Name="tbDescripcion" HorizontalAlignment="Left" Height="30" Margin="128,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="350" Background="White" ToolTip="filtro" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" VerticalContentAlignment="Center"/>
        <TextBox x:Name="tbSubtotal" HorizontalAlignment="Left" Height="30" Margin="654,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" Background="#FFB4FFB4" ToolTip="filtro" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" VerticalContentAlignment="Center" Focusable="False" IsHitTestVisible="False" IsTabStop="False" HorizontalContentAlignment="Right"/>
        <TextBox x:Name="tbPrecio" HorizontalAlignment="Left" Height="30" Margin="546,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" Background="White" ToolTip="filtro" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" PreviewKeyDown="tbPrecio_PreviewKeyDown" TextChanged="tbPrecio_TextChanged"/>
        <TextBox x:Name="tbCantidad" HorizontalAlignment="Left" Height="30" Margin="481,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="62" Background="White" ToolTip="filtro" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" PreviewKeyDown="tbCantidad_PreviewKeyDown" TextChanged="tbCantidad_TextChanged"/>
        <Label x:Name="label_Copy" Content="Código" HorizontalAlignment="Left" Margin="21,92,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>
        <Label x:Name="label_Copy1" Content="Descripción" HorizontalAlignment="Left" Margin="129,92,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>
        <Label x:Name="label_Copy2" Content="Cant." HorizontalAlignment="Left" Margin="481,92,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>
        <Label x:Name="label_Copy3" Content="Precio $" HorizontalAlignment="Left" Margin="547,92,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>
        <Label x:Name="label_Copy4" Content="Sub-total $" HorizontalAlignment="Left" Margin="654,92,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="36" Margin="20,169,0,0" VerticalAlignment="Top" Width="339" SelectionChanged="tabControl_SelectionChanged" Focusable="False">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">

                                <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gainsboro" CornerRadius="4,4,0,0" Margin="0,0,2,0">
                                    <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="26,8"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#FFB4FFB4" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="White" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabItem Header="1"></TabItem>
            <TabItem Header="2"></TabItem>
            <TabItem Header="3"></TabItem>
            <TabItem Header="4"></TabItem>
            <TabItem Header="5"></TabItem>
        </TabControl>
        <ListView x:Name="listFiltro_Copy"    Height="202" Margin="21,204,0,0" VerticalAlignment="Top" Width="738" Background="#FFF0F0F0" KeyDown="listFiltro_KeyDown" HorizontalAlignment="Left"  >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Código" Width="100"   DisplayMemberBinding="{Binding codigo}"  />
                    <GridViewColumn Header="Descripcion" Width="350" DisplayMemberBinding="{Binding descripcion}"  />
                    <GridViewColumn Header="Cantidad" Width="80"   DisplayMemberBinding="{Binding cantidad}"  />
                    <GridViewColumn Header="Precio $" Width="100"   DisplayMemberBinding="{Binding precio}"  />
                    <GridViewColumn Header="Sub-total $" Width="100"   DisplayMemberBinding="{Binding total}"  />
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnNuevo" Content="Nuevo" HorizontalAlignment="Left" Height="30" Margin="461,38,0,0" VerticalAlignment="Top" Width="124" GotFocus="btnNuevo_GotFocus" LostFocus="btnNuevo_LostFocus" ForceCursor="True" IsManipulationEnabled="True" Click="btnNuevo_Click" Background="White" PreviewKeyDown="btnNuevo_PreviewKeyDown" FocusVisualStyle="{x:Null}"/>

    </Grid>
</Window>
